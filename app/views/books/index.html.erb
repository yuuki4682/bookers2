<div class="container mt-3">
  
  <%= render 'error_messages', book: @new_book %>
  
  <div class="row">
    <%= render 'new', book: @new_book %>
    
    <div class="col-7">
      <h1>Books</h1>
      <table class="table">
        <thread>
          <tr>
            <th></th>
            <th>Title</th>
            <th>opinion</th>
          </tr>
        </thread>
        
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.image.attached? %>
                  <%= image_tag book.image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'no_image', size: "100x100" %>
                <% end %>
              </td>
              <td>
                <%= link_to (book_path(book.id)) do %>
                <%= book.title %>
                <% end %>
                </td> 
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
      
  </div>
</div>

