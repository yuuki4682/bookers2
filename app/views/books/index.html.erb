<div class="container mt-3">
  
  <%= render 'layouts/error_messages', obj: @new_book %>
  
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <%= render 'relationships/button', user: current_user %>
      <%= render 'users/config', user: current_user %>
      <h2>New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <div>
        <%= link_to '新しい順', books_path(latest: "true") %>|
        <%= link_to '評価の高い順', books_path(score_count: "true") %>
      </div>
      <%= render 'index', books: @books %>
      </div>
      
  </div>
</div>

