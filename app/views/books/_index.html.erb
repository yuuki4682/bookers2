<table class="table">
  <thread>
    <tr>
      <th></th>
      <th>Title</th>
      <th>opinion</th>
      <th></th>
      <th></th>
    </tr>
  </thread>
  
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to (user_path(book.user_id)) do %>
            <%= image_tag book.user.get_profile_image(100, 100) %>
          <% end %>
        </td>
        <td>
          <%= link_to (book_path(book.id)) do %>
          <%= book.title %>
          <% end %>
          </td> 
        <td><%= book.body %></td>
        <td>
          <%= render 'favorites/favorite-btn', book: book %>
        </td>
        <td>
          コメント数：<%= book.book_comments.count %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>