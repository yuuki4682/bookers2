<div class="container">
  
  <% if @user.errors.any? %>
    <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
    <div>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-7 mx-auto">
      
      <h1>User info</h1>
      
      <div class=>
        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label>Name</label><br/>
          <%= f.text_field :name, autofocus: true, class:'form-controll' %>
        </div>
        <div class="form-group">
          <label>Iamge</label><br/>
          <%= f.file_field :profile_image, accept:"image/*" %>
        </div>
        <div class="form-group">
          <label>Introduction</label><br/>
          <%= f.text_area :introduction, class:'form-controll' %>
        </div>
        <div>
        <%= f.submit "Update User", class:'btn btn-secondary' %>  
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

