<table class="table">
  <thread>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Introduction</th>
    </tr>
  </thread>
  
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100, 100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>