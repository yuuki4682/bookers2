<table class="table">
  <thread>
    <tr>
      <th></th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thread>
  
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100, 100) %></td>
        <td><%= user.name %></td>
        <td>Follows: <%= user.followers.count %></td>
        <td>Followers <%= user.followeds. count %>:</td>
        <td>
          <% if current_user.following?(user) %>
            <%= link_to 'フォロー外す', user_relationships_path(user), method: :delete, class:"btn btn-info btn-block"  %>
          <% else %>
            <%= link_to 'フォローする', user_relationships_path(user), method: :post, class:"btn btn-success btn-block" %>
          <% end %>
        </td>
        <td><%= link_to 'Show', user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>